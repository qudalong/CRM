        <script type="text/x-jsrender" id="J_tpl_menu">
            {{for}}
            <tr>
                <th>{{:#getIndex()+1}}</th>
                <td onclick="toItemDesc(this)" permissionId={{:permissionId}} parentId=:{{:parentId}} menuName={{:name}} class="base-color pointer">{{:name}}</td>
                <td>{{:url}}</td>
                <td>
                    <button onclick="editMenu(this)" data-toggle="modal" data-target="#editMenu" permissionId={{:permissionId}} parentId=:{{:parentId}} menuName={{:name}} menuUrl={{:url}} class="btn btn-sm  btn-icon btn-outline" data-toggle="tooltip">
                        <i class="fa fa-pencil-square-o"></i>
                    </button>
                    <button onclick="deleteMenu(this)" type="button" permissionId={{:permissionId}} class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-toggle="tooltip">
                        <i class="ti-trash"></i>
                    </button>
                </td>
            </tr>
            {{/for}}
        </script>
        <script>
            window.onload = function() {
                //导航列表查询
                navSlide();
                // 查询组织列表
                menuList();
            }

            //调到详情
            function toItemDesc(el) {
                var p_name = $(el).attr('menuname');
                var p_permissionId = $(el).attr('permissionid');
                var p_parentId = $(el).attr('parentid');
                window.location.href = "/pages/system/menuManageLeveDesc";
                localStorage.setItem("p_name", p_name);
                localStorage.setItem("p_permissionId", p_permissionId);
                localStorage.setItem("p_parentId", p_parentId);
            }

            //添加菜单
            function addMenu() {
                var m_name = $("#m_name").val();
                var m_url = $("#m_url").val();
                if (m_name && m_url) {
                    $.ajax({
                        url: apiPath + 'api/menu/insert',
                        type: 'post',
                        data: {
                            name: m_name,
                            url: m_url,
                            parentId: '',
                            permissionType: 1, //1 一级 2 二级 3按钮 4 其他
                            icon: '',
                            sort: ''
                        },
                        dataType: 'JSON',
                        success: function(res) {
                            if (res.code == 200) {
                                // 查询菜单列表
                                menuList();
                                $('#addMenu').modal('hide');
                            }
                        }
                    });
                }
            }

            //修改菜单时回显值
            var permissionId;
            var parentId;

            function editMenu(el) {
                permissionId = $(el).attr('permissionid');
                parentId = $(el).attr('parentid');
                var m_name = $(el).attr('menuname');
                var m_url = $(el).attr('menuurl');
                $("#m_e_name").val(m_name);
                $("#m_e_url").val(m_url);
            }

            function editMenuSave() {
                var m_e_name = $("#m_e_name").val();
                var m_e_url = $("#m_e_url").val();
                if (m_e_name && m_e_url) {
                    $.ajax({
                        url: apiPath + 'api/menu/update',
                        type: 'post',
                        data: {
                            permissionId: permissionId,
                            name: m_e_name,
                            url: m_e_url,
                            parentId: 0,
                            permissionType: 1, //1 目录 2 菜单 3按钮 4 其他
                            icon: '',
                            sort: ''
                        },
                        dataType: 'JSON',
                        success: function(res) {
                            if (res.code == 200) {
                                // 查询菜单列表
                                menuList();
                                $('#editMenu').modal('hide');
                            }
                        }
                    });
                }
            }

            //删除菜单
            function deleteMenu(el) {
                var permissionId_del = $(el).attr('permissionId');
                swal({
                    title: "你确定删除吗?",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    cancelButtonText: "取消",
                    confirmButtonText: "确定"
                }, function(isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            url: apiPath + 'api/menu/delete',
                            type: 'post',
                            data: {
                                permissionId: permissionId_del
                            },
                            dataType: 'JSON',
                            success: function(res) {
                                if (res.code == 200) {
                                    // 查询菜单列表
                                    menuList();
                                }
                            }
                        });
                    }
                });
            }

            //菜单列表
            function menuList() {
                var tmpl = $.templates("#J_tpl_menu");
                $.ajax({
                    url: apiPath + 'api/menu/list',
                    type: 'post',
                    data: {
                        permissionId: ''
                    },
                    dataType: 'JSON',
                    success: function(res) {
                        if (res.code == 200 && res.result.length) {
                            var data = res.result;
                            var html = tmpl.render(data);
                            $("#menu_table").html(html);
                            $('.clickAuto').trigger("click");
                        }
                    }
                });
            }
        </script>