        <script>
            function addUser() {
                var userName = $("#inputUserName").val();
                var userTel = $("#inputUserTel").val();
                var reg_tel = /^1[34578]\d{9}$/;
                if (!userName.trim()) {
                    swal({
                        title: "",
                        text: "成员姓名不能为空！",
                        timer: 2000,
                        showConfirmButton: false
                    });
                    return
                } else if (!userTel.trim()) {
                    swal({
                        title: "",
                        text: "成员手机号不能为空！",
                        timer: 2000,
                        showConfirmButton: false
                    });
                    return
                } else if (!reg_tel.test(userTel)) {
                    swal({
                        title: "",
                        text: "请输入正确的手机号",
                        timer: 2000,
                        showConfirmButton: false
                    });
                    return
                }
                $('#addUser').modal('hide');
            }
        </script>
        <script>
            window.onload = function() {
                selectTeamList();
            }

            // 回显值
            var ori_e_id, ori_name;

            function editTeam(el) {
                ori_e_id = $(el).attr('organizationid');
                ori_name = $(el).attr('organizationname');
                $("#e_organName").val(ori_name);
            }

            function toDesc(el) {
                var p_organizationId = $(el).attr('organizationid');
                var p_organizationName = $(el).attr('organizationname');
                window.location.href = "/pages/system/organizationDesc";
                localStorage.setItem("p_organizationId", p_organizationId);
                localStorage.setItem("p_organizationName", p_organizationName);
            }

            //我的组织列表
            function selectTeamList() {
                var tmpl = $.templates("#J_tpl_list");
                $.ajax({
                    url: apiPath + 'api/organization/list',
                    type: 'post',
                    data: {},
                    dataType: 'JSON',
                    success: function(res) {
                        if (res.code == 200) {
                            var data = res.result;
                            var html = tmpl.render(data);
                            $("#list_table").html(html);
                            $('.clickAuto').trigger("click");
                        }
                    }
                });
            }


            //修改组织 
            function editTeamSave() {
                var ori_e_name = $("#e_organName").val();
                if (ori_e_name) {
                    $.ajax({
                        url: apiPath + 'api/organization/update',
                        type: 'post',
                        data: {
                            organizationId: ori_e_id,
                            organizationName: ori_e_name
                        },
                        dataType: 'JSON',
                        success: function(res) {
                            if (res.code == 200) {
                                $('#editTeam').modal('hide');
                                // 查询组织列表
                                selectTeamList();
                            }
                        }
                    });
                }
            }

            //添加组织 
            function addTeam() {
                var ori_a_name = $("#a_organName").val();
                if (ori_a_name) {
                    $.ajax({
                        url: apiPath + 'api/organization/insert',
                        type: 'post',
                        data: {
                            organizationName: ori_a_name
                        },
                        dataType: 'JSON',
                        success: function(res) {
                            if (res.code == 200) {
                                $('#addTeam').modal('hide');
                                // 查询组织列表
                                selectTeamList();
                            }
                        }
                    });
                }
            }

            //删除组织
            function deleteTeam(el) {
                var ori_id = $(el).attr('organizationid');
                swal({
                    title: "你确定删除吗?",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    cancelButtonText: "取消",
                    confirmButtonText: "确定"
                }, function(isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            url: apiPath + 'api/organization/delete',
                            type: 'post',
                            data: {
                                organizationId: ori_id
                            },
                            dataType: 'JSON',
                            success: function(res) {
                                if (res.code == 200) {
                                    // 查询组织列表 
                                    selectTeamList();
                                }
                            }
                        });
                    }
                });
            }
        </script>