        <script>
            window.onload = function() {
                p_name = localStorage.getItem("p_name");
                p_permissionId = localStorage.getItem("p_permissionId");
                p_parentId = localStorage.getItem("p_parentId");
                menuList();
            }

            function addUser() {
                var userName = $("#inputUserName").val();
                var userTel = $("#inputUserTel").val();
                var reg_tel = /^1[34578]\d{9}$/;
                if (!userName.trim()) {
                    swal({
                        title: "",
                        text: "成员姓名不能为空！",
                        timer: 2000,
                        showConfirmButton: false
                    });
                    return
                } else if (!userTel.trim()) {
                    swal({
                        title: "",
                        text: "成员手机号不能为空！",
                        timer: 2000,
                        showConfirmButton: false
                    });
                    return
                } else if (!reg_tel.test(userTel)) {
                    swal({
                        title: "",
                        text: "请输入正确的手机号",
                        timer: 2000,
                        showConfirmButton: false
                    });
                    return
                }
                $('#addUser').modal('hide');
            }

            function editUser() {
                $('#editUser').modal('hide');
            }

            function editMenuSave() {
                var m_e_name = $("#m_e_name").val();
                var m_e_url = $("#m_e_url").val();
                $.ajax({
                    url: apiPath + 'api/menu/update',
                    type: 'post',
                    data: {
                        permissionId: permissionId,
                        name: m_e_name,
                        url: m_e_url,
                        parentId: p_permissionId,
                        permissionType: 2, //1 一级 2 二级 3按钮 4 其他 
                        icon: '',
                        sort: ''
                    },
                    dataType: 'JSON',
                    success: function(res) {
                        if (res.code == 200) {
                            // 查询菜单列表 
                            menuList();
                            $('#editMenu').modal('hide');
                        }
                    }
                });
            }

            //删除二级菜单 
            function deleteMenu(el) {
                var permissionId_del = $(el).attr('permissionId');
                swal({
                    title: "你确定删除吗?",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    cancelButtonText: "取消",
                    confirmButtonText: "确定"
                }, function(isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            url: apiPath + 'api/menu/delete',
                            type: 'post',
                            data: {
                                permissionId: permissionId_del
                            },
                            dataType: 'JSON',
                            success: function(res) {
                                if (res.code == 200) { // 查询菜单列表
                                    menuList();
                                }
                            }
                        });
                    }
                });
            }

            //菜单列表 
            function menuList() {
                var tmpl = $.templates("#J_tpl_menuDesc");
                $.ajax({
                    url: apiPath + 'api/menu/list',
                    type: 'post',
                    data: {
                        permissionId: p_permissionId
                    },
                    dataType: 'JSON',
                    success: function(res) {
                        if (res.code == 200 && res.result.length) {
                            console.log('...............菜单列表...............');
                            console.log(res);
                            var data = res.result;
                            var html = tmpl.render(data);
                            $("#menu_tableDesc").html(html);
                            $('.clickAuto').trigger("click");
                        }
                    }
                });
            }
        </script>