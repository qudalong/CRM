        //公共手机验证
        function commCkTel(tel) {
            var regTel = /^[1][3,4,5,7,8,9][0-9]{9}$/;
            if (!regTel.test(tel)) {
                $(".telMsg").addClass("my-error").text('请填写正确的手机号码');
                return false;
            } else {
                $(".telMsg").removeClass("my-error");
            }
        }

        //公共Select验证
        function commCkSelect(el, val, msg) {
            if (!val || val == msg) {
                $(el).addClass("my-error").text(msg);
                return false;
            } else {
                $(el).removeClass("my-error");
            }
        }
    </script>